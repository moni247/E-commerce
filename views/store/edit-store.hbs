<div class="container edit-product">
    <div class="row mb-5">
        <div class="col-3">
        </div>
        <div class="col-6">
            <h1>Edit Store</h1>
            <form action="/stores/{{id}}/edit" method="POST" enctype="multipart/form-data">
                <div class="row mb-1">
                    <div class="col">
                        <div class="form-outline">
                            <label class="form-label" for="name"></label>
                            <input type="text" id="name" class="form-control" name="name" value="{{name}}">
                        </div>
                    </div>
                </div>

                <div class="form-outline mb-3">
                    <label class="form-label" for="address"></label>
                    <textarea class="form-control" id="address" rows="4" name="address">{{address}}</textarea>
                </div>

                <div class="form-outline mb-3">
                    <label class="form-label" for="schedule"></label>
                    <textarea class="form-control" id="schedule" rows="4" name="schedule">{{schedule}}</textarea>
                </div>

                div class="form-outline mb-3">
                <label class="form-label" for="latitude"></label>
                <textarea class="form-control" id="latitude" rows="4" name="latitude">{{latitude}}</textarea>
        </div>

        div class="form-outline mb-3">
        <label class="form-label" for="latitude"></label>
        <textarea class="form-control" id="latitude" rows="4" name="latitude">{{longitude}}</textarea>
    </div>


    <div class="d-grid gap-2 col-6 mx-auto">
        <button type="submit" class="btn btn btn-outline-dark btn-block mb-4">Edit</button>
    </div>
    </form>
</div>
<div class="col-3">
</div>
</div>
</div>