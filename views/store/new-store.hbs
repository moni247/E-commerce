<div class="container upper">
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <h1 class="mb-5">Create New Store</h1>
            <form action="/admin/stores/create" method="POST">
                <div class="row mb-1">
                    <div class="col">
                        <div class="form-outline">
                            <label class="form-label" for="name"></label>
                            <input type="text" id="name" class="form-control" name="name" placeholder="Name">
                        </div>
                    </div>
                </div>

                <div class="form-outline mb-3">
                    <label class="form-label" for="address"></label>
                    <input class="form-control" id="address" rows="4" name="address"
                        placeholder="Address">
                </div>

                <div class="form-outline mb-3">
                    <label class="form-label" for="schedule"></label>
                    <input class="form-control" id="schedule" rows="4" name="schedule"
                        placeholder="Schedule">
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-outline mb-3">
                            <label class="form-label" for="latitude"></label>
                            <input class="form-control" id="latitude" rows="4" name="latitude"
                                placeholder="Latitude">
                        </div>
                    </div>
                    <div class="col-md-6 mb-5">
                        <div class="form-outline mb-3">
                            <label class="form-label" for="longitude"></label>
                            <input class="form-control" id="longitude" rows="4" name="longitude"
                                placeholder="Longitude">
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary btn-block mb-4">Create</button>

                <div class="col-md-2">
                </div>
            </form>
        </div>
    </div>
</div>