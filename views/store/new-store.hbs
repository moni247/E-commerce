<div class="container upper">
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <h1 class="mb-5">Create New Store</h1>
            <form action="/admin/stores/create" method="POST">
                <div class="row mb-1">
                    <div class="col">
                        <div class="form-outline">
                            <label class="form-label" for="name"></label>
                            <input type="text" id="name" class="form-control" name="name" placeholder="Name">
                        </div>
                    </div>
                </div>

                <div class="form-outline mb-3">
                    <label class="form-label" for="street"></label>
                    <input class="form-control" id="street" rows="4" name="street" placeholder="Street">
                </div>
                <div class="form-outline mb-3">
                    <label class="form-label" for="number"></label>
                    <input class="form-control" id="number" rows="4" name="number" placeholder="Number">
                </div>
                <div class="form-outline mb-3">
                    <label class="form-label" for="city"></label>
                    <input class="form-control" id="city" rows="4" name="city" placeholder="City">
                </div>
                <div class="form-outline mb-3">
                    <label class="form-label" for="country"></label>
                    <input class="form-control" id="country" rows="4" name="country" placeholder="Country">
                </div>
                <div class="form-outline mb-3">
                    <label class="form-label" for="zipCode"></label>
                    <input class="form-control" id="zipCode" rows="4" name="zipCode" placeholder="Zip Code">
                </div>

                <div class="form-outline mb-3">
                    <label class="form-label" for="schedule"></label>
                    <input class="form-control" id="schedule" rows="4" name="schedule" placeholder="Schedule">
                </div>
                <div class="row">
                    <div class="col">
                        <div class="mb-2">
                            <label class="form-label" for="latitude"></label>
                            <input class="form-control" id="latitude" rows="4" name="latitude" placeholder="Latitude">
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-5">
                            <label class="form-label" for="longitude"></label>
                            <input class="form-control" id="longitude" rows="4" name="longitude" placeholder="Longitude">
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 col-6 mx-auto">
                    <button type="submit" class="btn btn btn-outline-dark btn-block mb-4">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>