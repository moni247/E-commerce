<div class="container-details">
    <div class="container">
        <div class="row">
            <div class="col">
                <img src="{{images.[0]}}" class="card-img-top" alt="{{name}}">
            </div>
            <div class="col">
                <img src="{{images.[1]}}" class="card-img-top" alt="{{name}}">
            </div>
        </div>
    </div>
    <div class="container">
        <div class="col">
            <h2>{{name}}</h2>
            <h3>{{category}}</h3>
            <p>{{price}}</p>
            <p>{{description}}</p>
        </div>
    </div>
</div>