<div class="container edit-product">
    <div class="row mb-5">
        <div class="col-3">
        </div>
        <div class="col-6">
            <h1>Edit Product</h1>
            <form action="/admin/products/{{id}}/edit" method="POST" enctype="multipart/form-data">
                <div class="row mb-1">
                    <div class="col">
                        <div class="form-outline">
                            <label class="form-label" for="name"></label>
                            <input type="text" id="name" class="form-control" name="name" value="{{name}}">
                        </div>
                    </div>
                </div>

                <div class="form-outline mb-3">
                    <label class="form-label" for="description"></label>
                    <textarea class="form-control" id="description" rows="4"
                        name="description">{{description}}</textarea>
                </div>

                <div class="input-group mb-3">
                    <input type="text" class="form-control" aria-label="Dollar amount (with dot and two decimal places)"
                        value="{{price}}" name="price">
                    <span class="input-group-text">â‚¬</span>
                </div>

                <div class="input-group mb-3">
                    <input class="form-control" type="file" id="formFile" name="imgUrl">
                    <label for="formFile" class="input-group-text">Upload</label>
                </div>

                <div class="input-group mb-4">
                    <label class="input-group-text" for="inputGroupSelect01">Category</label>
                    <select class="form-select" id="inputGroupSelect01">
                        <option selected>Choose...</option>
                        <option selected value="1">Women</option>
                        <option value="2">Men</option>
                        <option value="3">Kids</option>
                    </select>
                </div>

                <div class="form-check d-flex justify-content-center mb-3">
                    <input class="form-check-input me-2" type="checkbox" id="checkbox" checked>
                    <label class="form-check-label" for="checkbox">Create product?</label>
                </div>
                <div class="d-grid gap-2 col-6 mx-auto">
                    <button type="submit" class="btn btn btn-outline-dark btn-block mb-4">Edit</button>
                </div>
        </div>
        <div class="col-3">
        </div>
        </form>
    </div>
</div>