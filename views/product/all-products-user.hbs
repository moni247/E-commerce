<div class="container">
    <div class="row">
        {{#each products}}
        <div class="col-md-3">
            <div class="card" style="width: 18rem;">
                <a href="/products/women/{{id}}"><img src="{{images.[0]}}" class="card-img-top" alt="{{name}}"></a>
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text">{{description}}</p>
                </div>
                <form action="/add-to-cart/{{id}}" method="POST">
                    <input type="submit" class="btn btn btn-outline-dark btn-block mb-4" value="Add to cart">
                </form>
            </div>
        </div>
        {{/each}}
    </div>
</div>