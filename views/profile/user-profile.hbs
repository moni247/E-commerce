<div class="col">
    {{#with user}}
    <div> <img class="card-img-top"
            src="https://res.cloudinary.com/da1iyocf4/image/upload/v1657192791/project-nike/fondonegro_k5mk6s.jpg"
            alt="Card image cap">
        <div class="card-body little-profile text-center">
            <div class="pro-img"><img src="{{image}}" alt="{{username}}"></div>
            <h3 class="m-b-0">{{username}}</h3>
            <p>{{email}}</p>
            <p>{{country}}</p>
            <p>{{postalCode}}</p>
            <a href="/profile/{{id}}/edit" class="m-t-10 waves-effect waves-dark btn btn-primary btn-md btn-rounded"
                data-abc="true">Edit profile</a>
            <div class="row text-center m-t-20">
                <div class="col-lg-4 col-md-4 m-t-20">
                    <h3 class="m-b-0 font-light">10434</h3><small>Articles</small>
                </div>
                <div class="col-lg-4 col-md-4 m-t-20">
                    <h3 class="m-b-0 font-light">434K</h3><small>Items sold</small>
                </div>
                <div class="col-lg-4 col-md-4 m-t-20">
                    <h3 class="m-b-0 font-light">454</h3><small>Shops</small>
                </div>
            </div>
        </div>
    </div>
    {{/with}}
</div>