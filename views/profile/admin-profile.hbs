<div class="bg-navbar"></div>
{{#with user}}
<div class="profileHeader">
    <div class="primaryInfo">
        <div class="displayFlex">
            <img src="{{image}}" alt="{{username}}'s profile image">
            <div class="personalInfo">
                <h1>{{username}}</h1>
                <p>{{email}}</p>
                <p>{{country}}</p>
                <p>{{postalCode}}</p>
            </div>
            <p>
                <a href="/admin/products" class="btn btn-dark">All products</a>
                <a href="/admin/products/create" class="btn btn-dark">Create products</a>
            </p>
        </div>
    </div>
</div>
{{/with}}